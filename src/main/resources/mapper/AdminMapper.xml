<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="aftnos.aftourismserver.auth.mapper.AdminMapper">

    <!-- 查询列封装，避免重复书写 -->
    <sql id="Base_Column_List">
        id, username, password, real_name, phone, email,
        status, remark, is_deleted, create_time, update_time
    </sql>

    <!-- 根据账号查询管理员 -->
    <select id="findByUsername" resultType="aftnos.aftourismserver.auth.pojo.Admin">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_admin
        WHERE username = #{username}
        LIMIT 1
    </select>

    <!-- 根据主键查询管理员 -->
    <select id="findById" resultType="aftnos.aftourismserver.auth.pojo.Admin">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_admin
        WHERE id = #{id}
        LIMIT 1
    </select>

</mapper>
