<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aftourism.admin.mapper.AdminAccountMapper">

    <!-- 根据账号查询管理员信息 -->
    <select id="findByUsername" parameterType="string" resultType="com.aftourism.admin.pojo.AdminAccount">
        SELECT
            id,
            username,
            password,
            real_name,
            phone,
            email,
            status,
            remark,
            is_deleted,
            create_time,
            update_time
        FROM t_admin
        WHERE username = #{username}
          AND is_deleted = 0
        LIMIT 1
    </select>
</mapper>
